@page
@model FitPro_Gym_Membership_Manager.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to FitPro Gym";
}

<div class="container mt-4">
    <h1 class="text-center">Welcome to FitPro Gym</h1>
    <p class="text-center lead">Your journey to fitness starts here!</p>
</div>

<!-- Bootstrap Carousel -->
<div id="membershipCarousel" class="carousel slide mt-4" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/img/basic-plan.jpg" class="d-block w-100" alt="Basic Plan">
            <div class="carousel-caption d-none d-md-block">
                <h5>Basic Plan</h5>
                <p>Affordable and effective for beginners.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/img/premium-plan.jpg" class="d-block w-100" alt="Premium Plan">
            <div class="carousel-caption d-none d-md-block">
                <h5>Premium Plan</h5>
                <p>More features and flexibility.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/img/elite-plan.jpg" class="d-block w-100" alt="Elite Plan">
            <div class="carousel-caption d-none d-md-block">
                <h5>Elite Plan</h5>
                <p>The ultimate experience for fitness enthusiasts.</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#membershipCarousel" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#membershipCarousel" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>

<!-- Bootstrap Cards -->
<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Affordable Plans</h5>
                <p class="card-text">Choose from a variety of membership options that fit your needs and budget.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Expert Trainers</h5>
                <p class="card-text">Work with certified professionals who help you achieve your fitness goals.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">State-of-the-Art Equipment</h5>
                <p class="card-text">Access modern facilities and cutting-edge gym equipment.</p>
            </div>
        </div>
    </div>
</div>
