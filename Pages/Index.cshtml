@page
@model FitPro_Gym_Membership_Manager.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to FitPro Gym";
}

<div class="container mt-4">
    <h1 class="text-center">Welcome to FitPro Gym</h1>
    <p class="text-center lead">Your journey to fitness starts here!</p>
    
    <!-- Call to Action -->
    <div class="text-center mt-4">
        <a href="/MembershipPlans/Index" class="btn btn-primary btn-lg me-3">
            <i class="fas fa-dumbbell me-2"></i>View Membership Plans
        </a>
        <a href="#" class="btn btn-outline-primary btn-lg" data-bs-toggle="modal" data-bs-target="#contactModal">
            <i class="fas fa-envelope me-2"></i>Contact Us
        </a>
    </div>
</div>

<!-- Bootstrap Carousel -->
<div id="membershipCarousel" class="carousel slide mt-4" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#membershipCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Basic Plan"></button>
        <button type="button" data-bs-target="#membershipCarousel" data-bs-slide-to="1" aria-label="Premium Plan"></button>
        <button type="button" data-bs-target="#membershipCarousel" data-bs-slide-to="2" aria-label="Elite Plan"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/img/basic-plan.jpg" class="d-block w-100" alt="Basic Plan" loading="lazy">
            <div class="carousel-caption">
                <h5>Basic Plan</h5>
                <p>Affordable and effective for beginners.</p>
                <a href="/MembershipPlans/Index" class="btn btn-light">Learn More</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/img/premium-plan.jpg" class="d-block w-100" alt="Premium Plan" loading="lazy">
            <div class="carousel-caption">
                <h5>Premium Plan</h5>
                <p>More features and flexibility.</p>
                <a href="/MembershipPlans/Index" class="btn btn-light">Learn More</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/img/elite-plan.jpg" class="d-block w-100" alt="Elite Plan" loading="lazy">
            <div class="carousel-caption">
                <h5>Elite Plan</h5>
                <p>The ultimate experience for fitness enthusiasts.</p>
                <a href="/MembershipPlans/Index" class="btn btn-light">Learn More</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#membershipCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#membershipCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Features Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Why Choose FitPro Gym?</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-tags fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Affordable Plans</h5>
                    <p class="card-text">Choose from a variety of membership options that fit your needs and budget.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-tie fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Expert Trainers</h5>
                    <p class="card-text">Work with certified professionals who help you achieve your fitness goals.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-dumbbell fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">State-of-the-Art Equipment</h5>
                    <p class="card-text">Access modern facilities and cutting-edge gym equipment.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Testimonials Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">What Our Members Say</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h6 class="mb-2">John Doe</h6>
                    <small class="text-muted d-block mb-3">Member since 2023</small>
                    <p class="card-text">"The trainers are amazing and the facilities are top-notch. I've seen incredible progress in my fitness journey!"</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h6 class="mb-2">Jane Smith</h6>
                    <small class="text-muted d-block mb-3">Member since 2022</small>
                    <p class="card-text">"The community here is fantastic. Everyone is supportive and the staff is always helpful."</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h6 class="mb-2">Mike Johnson</h6>
                    <small class="text-muted d-block mb-3">Member since 2021</small>
                    <p class="card-text">"The variety of equipment and classes keeps my workouts fresh and challenging. Highly recommend!"</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Newsletter Section -->
<div class="container mt-5">
    <div class="card bg-light">
        <div class="card-body text-center">
            <h3 class="card-title">Stay Updated</h3>
            <p class="card-text">Subscribe to our newsletter for fitness tips and special offers.</p>
            <form class="row g-3 justify-content-center">
                <div class="col-auto">
                    <input type="email" class="form-control" placeholder="Enter your email" required>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Subscribe</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Floating Action Button -->
<a href="#" class="fab" data-bs-toggle="modal" data-bs-target="#contactModal" aria-label="Contact Us">
    <i class="fas fa-envelope"></i>
</a>
